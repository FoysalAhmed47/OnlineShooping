<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            />

       </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Write Your Phone Number"
        android:background="@drawable/input_design"
        android:textSize="15dp"
        android:padding="16dp"
        android:layout_below="@+id/relative123"
        android:layout_margin="15dp"
        android:inputType="phone"
        />

    <TextView
        android:id="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security questions..!"
        android:gravity="center"
        android:layout_below="@+id/find_phone_number"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        />


    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Where is your hometown?"
        android:textSize="15dp"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/title_question"
        android:layout_margin="15dp"
        android:inputType="textMultiLine"
        />


    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="who is your favourite hero?"
        android:textSize="15dp"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/question_1"
        android:layout_margin="15dp"
        android:inputType="textMultiLine"
        />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/question_2"
        android:layout_margin="15dp"

        />

</RelativeLayout>