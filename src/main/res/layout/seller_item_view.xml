<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="6dp"
    android:padding="5dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_seller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#D130E4"
            />

        <TextView
            android:id="@+id/product_seller_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_seller_name"
            android:text="State"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="17dp"
            android:textColor="#423838">

        </TextView>

        <ImageView
            android:id="@+id/product_seller_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_seller_state"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/product_seller_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_seller_image"
            android:text="Product Price"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textColor="#141313"
            />



        <TextView
            android:id="@+id/product_seller_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_seller_price"
            android:text="Product Description"
            android:layout_marginTop="2dp"
            android:textAlignment="textStart"
            android:textSize="14dp"
            android:textColor="#141313"
            />



    </RelativeLayout>


</android.support.v7.widget.CardView>